<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ks_debug_assets</field>
        <field name="model">base.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base_setup.view_general_configuration"/>
        <field name="arch" type="xml">

            <xpath expr="//form" position="inside">
<!--                <h2>Odoo Debug Assets Permission</h2>-->


                <group string=" Debug Assets Permission" name="google">
                        <label for="ks_hide_debug_assets_permission"/>
                        <div >
                            <div >
                                <field name="ks_hide_debug_assets_permission" class="oe_inline"/>
                                <label for="ks_hide_debug_assets_permission"
                                       string="Allow only Admin to View Odoo Environment On Debug Assets"/>
                            </div>
                        </div>
                    </group>
            </xpath>
        </field>
    </record>
</odoo>
